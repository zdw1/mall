.detail-container{
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 50rpx 0 200rpx;
    box-sizing: border-box;
}
.swiper-box {
  width: 300px;
  height: 300px;
}

.swiper-box .slide-image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

.shopping-container {
  width: calc(100% - 50rpx);
}

.shopping-container .name {
  margin: 10px;
  font-weight: bold;
  color: #333;
}

.shopping-container .price {
  margin: 10px;
  font-weight: normal;
  color: orangered;
}

.shopping-container .content {
  margin: 10px;
  color: #939393;
  line-height: 22px;
}
.shopping-container .num {
  margin: 10px;
  color: #333;
}

.swiper-container {
  margin: 0 auto;
  position: relative;
  overflow: hidden;
}

.swiper-pager {
  position: absolute;
  right: 20px;
  bottom: 20px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: rgba(0,0,0,.3);
  color: #fff;
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
  line-height: 40px;
  font-size: 12px;
}